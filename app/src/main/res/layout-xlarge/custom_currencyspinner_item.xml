<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/currency_Spinner_layout"
    android:padding="@dimen/_4dp"
    android:layout_weight="2"

    >

    <TextView
        android:layout_weight="1.25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USD الدولار  الامريكي"
        android:textSize="@dimen/textSize_dimens"
        android:textColor="@color/black"
        android:id="@+id/currency_Spinner_textView"
        android:layout_marginTop="@dimen/_16dp"

        />

    <ImageView
        android:layout_weight=".75"
        android:layout_width="@dimen/icon_dimens"
        android:layout_height="@dimen/icon_dimens"
        android:src="@drawable/usd"
        android:id="@+id/currency_Spinner_imagView"
        android:paddingLeft="@dimen/_12dp"


        />
</LinearLayout>